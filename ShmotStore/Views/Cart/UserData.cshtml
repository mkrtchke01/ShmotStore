@model ShmotStore.Models.UserData


<div class="mt-3 text-center">
    <h2>Анкета</h2>
</div>
<form asp-action="userdata" asp-controller="cart" class="container mt-3">
    <div class="row ml-1 text-center justify-content-lg-center">
        <div>
            <div class="form-group mr-5">
                <label asp-for="Name" class="control-label">Имя</label>
                <input type="text" asp-for="Name" class="form-control" />
            </div>
            <div class="form-group mr-5">
                <label asp-for="Address" class="control-label">Адрес</label>
                <input type="text" asp-for="Address" class="form-control" />
            </div>
            <div class="form-group mr-5">
                <label asp-for="Telephone" class="control-label">Номер телефона</label>
                <input type="text" asp-for="Telephone" class="form-control" />
            </div>
        </div>
        <div>
            <div class="form-group ml-5">
                <label asp-for="Surname" class="control-label">Фамилия</label>
                <input type="text" asp-for="Surname" class="form-control" />
            </div>
            <div class="form-group ml-5">
                <label asp-for="Index" class="control-label">Почтовый индекс</label>
                <input type="text" asp-for="Index" class="form-control" />
            </div>
            <div class="form-group ml-5">
                <label asp-for="Email" class="control-label">Электронная почта</label>
                <input type="text" asp-for="Email" class="form-control" />
            </div>
        </div>
    </div>
    <div class="text-center">
        <div class="btn btn-outline-primary form-group ">
            <input type="submit" value="Отправить" class="btn btn-default" />
        </div>
    </div>

</form>

