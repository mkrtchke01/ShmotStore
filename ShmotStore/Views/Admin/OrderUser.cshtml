@model IEnumerable<ShmotStore.Models.Product>


<div class="container row pl-5 mb-2">
    @{
        double sum = 0;
        foreach (var el in Model)
        {

            <div class="container mt-3">
                <div class="row">
                    <div class="col-lg-2">
                        <img class="img-thumbnail" src="@el.Image" alt="@el.Name" />
                    </div>
                    <div class="col-lg">
                        <h2>
                            @el.Name @el.Production
                        </h2>
                        <h4>Цена: </h4><h6>@el.Price BYN</h6>
                        @{
                            sum += el.Price;
                        }
                        <h4>Размер: </h4><h6>@el.Size</h6>
                    </div>
                </div>
            </div>
        }
    }
    <div class="mt-3">
        <h4>Итоговая сумма корзины: </h4><h6>@Math.Round(sum, 2) BYN</h6>
    </div>
</div>
